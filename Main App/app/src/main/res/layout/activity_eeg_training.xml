<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rehabilitation.EEGTrainingActivity"
    android:orientation="vertical"
    tools:ignore="NestedWeights">

    <TextView
        style="@style/TitleFormatting"
        android:text="@string/app_name" />

    <fragment
        android:id="@+id/eeg_fragment"
        style="@style/StandardFormatting"
        android:layout_weight="2"
        android:name="com.example.strokeapp.eeg.EEGFragment"/>

    <androidx.cardview.widget.CardView
        style="@style/StandardFormatting"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/pause_button"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:onClick="pauseClicked"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/play"
                    android:layout_gravity="center"
                    android:contentDescription="@string/play" />

                <View
                    android:id="@+id/ssvep_view"
                    android:layout_height="50dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/green"/>
            </LinearLayout>

            <com.example.strokeapp.rehabilitation.EEGGame
                android:id="@+id/game"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>