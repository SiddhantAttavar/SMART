<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".results.ResultsActivity"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        style="@style/TitleFormatting"
        android:text="@string/results"/>

    <Button
        android:id="@+id/connect_button"
        style="@style/StandardFormatting"
        android:text="Connect"
        android:onClick="realTimeTest"/>

    <Button
        android:id="@+id/complete_test_button"
        style="@style/StandardFormatting"
        android:text="Complete Test"
        android:onClick="completeTest"/>

    <Button
        android:id="@+id/real_time_test_button"
        style="@style/StandardFormatting"
        android:text="Real Time Test"
        android:onClick="realTimeTest" />

    <TextView
        style="@style/StandardFormatting"
        android:id="@+id/results_view"
        android:text=""
        android:gravity="start"
        android:textSize="12sp"/>

    <fragment
        android:id="@+id/muse_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:name="com.example.strokeapp.MuseFragment"/>
</LinearLayout>