<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        style="@style/TitleFormatting"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/test_button"
        style="@style/StandardFormatting"
        android:layout_weight="3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/test"
        android:onClick="goToTests" />

    <Button
        android:id="@+id/rehabilitation_button"
        style="@style/StandardFormatting"
        android:layout_weight="3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/rehabilitation"
        android:onClick="goToRehabilitation"/>

    <Button
        android:id="@+id/past_results_button"
        style="@style/StandardFormatting"
        android:layout_weight="3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/results"
        android:onClick="goToResults"/>
</LinearLayout>