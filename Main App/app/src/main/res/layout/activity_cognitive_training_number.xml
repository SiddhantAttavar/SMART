<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".rehabilitation.CognitiveTrainingNumberActivity"
    android:orientation="vertical">

    <TextView
        style="@style/TitleFormatting"
        android:text="@string/cognitive_stroop_training"/>

    <TextView
        android:id="@+id/instructions"
        style="@style/StandardFormatting"
        android:text="@string/cognitive_number_training_instructions"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        style="@style/StandardFormatting"
        android:layout_marginBottom="16dp"
        app:cardElevation="15sp"
        app:cardCornerRadius="10dp"
        android:layout_weight="4">

        <TableLayout
            android:id="@+id/game_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"/>
    </androidx.cardview.widget.CardView>

    <fragment
        android:id="@+id/timer_fragment"
        style="@style/StandardFormatting"
        android:layout_marginBottom="16dp"
        android:name="com.example.strokeapp.rehabilitation.TimerFragment"/>
</LinearLayout>