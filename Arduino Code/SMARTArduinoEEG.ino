//The sampling Frequency is 256Hz//Then we calculate the sampling time in microsecondsconst int samplingFreq = 256;const float samplingTime =  (float) 1000000 / samplingFreq;//We read the sensor input from pin A0const int sensorPin = A0;//Start Time for the timerunsigned long startTime = micros();unsigned long currentTime = 0;//Declaring the variable for the sensor valueint sensorValue;//Called when the program is initializedvoid setup() {    //Initialize Serial with standard Baud Rate    Serial.begin(115200);        //Initialize the sensor    pinMode(sensorPin, INPUT);}//Called repeatedly after the setupvoid loop() {    //Check if the required amount of time has passed    currentTime = micros();    if ((currentTime - startTime) >= samplingTime) {        //Read the sensor value and send it via blutetooth to the Android app        sensorValue = analogRead(sensorPin);        Serial.println(getString(sensorValue));                //Resetting the start time for next time        startTime = currentTime;    }}//Function which converts an int into a string literal (char*)char* getString(int value) {    char msgBuffer[25];    char* str = dtostrf(value, 5, 1, msgBuffer);    return str;}