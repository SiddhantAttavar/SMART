//The sampling Frequency is 64Hz//Then we calculate the sampling time in microsecondsconst int samplingFreq = 64;const float samplingTime =  (float) 1000000 / samplingFreq;//We read the sensor input from pin A0const int sensorPin = A0;//Start Time for the timerunsigned long startTime = micros();unsigned long currentTime = 0;//Declaring the variable for the sensor valueint sensorValue;void setup() {    //Initialize the sensor    pinMode(sensorPin, INPUT);        //Initialize Serial with standard Baud Rate    Serial.begin(9600);}void loop() {    //Check if the required amount of time has passed    currentTime = micros();    if ((currentTime - startTime) >= samplingTime) {        //Read the sensor value and send it via blutetooth to the Android app        sensorValue = analogRead(sensorPin);        Serial.println(sensorValue);                //Resetting the start time for next time        startTime = currentTime;    }}